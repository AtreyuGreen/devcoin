<!-- Begin Page Header-->
<div class="row">
    <div class="page-header">
        <div class="d-flex align-items-center">
            <h2 class="page-header-title">Master Node View</h2>
            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="db-all.html"><i class="ti ti-home"></i></a></li>
                    <li class="breadcrumb-item active">Master Node</li>
                </ul>
            </div>	                            
        </div>
    </div>
</div>
<!-- End Page Header -->
<!-- Begin Row -->
<div class="row flex-row">
    <div class="col-xl-12 col-12">
        <div class="widget has-shadow">
            <div class="widget-body">
                <div class="row flex-row">
                    <div class="col-xl-6 col-6">
                        <span style="margin-top:15px;">NODE: <%= data.id %></span>
                    </div>
                    <div class="col-xl-6 col-6" style="text-align: right;">
                        <span>
                            <button class="btn" type="button" title="Pause node" onclick="window.location.href='init?status=false'" style="background-color:transparent"><i class="ti ti-control-pause la-2x text-primary"></i></button>
                            <button class="btn" type="button" title="Create new account" style="background-color:transparent"><i class="ti ti-wallet la-2x text-primary"></i></button>
                        </span>
                    </div>                    
                </div>

                <% if (data.blocks.length > 0) { %>
                <div class="row flex-row">
                    <div class="table-responsive">
                        <table id="sorting-table" class="table mb-0">
                            <thead>
                                <tr>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <% for(var index=0; index < data.blocks.length; index++ ){ %>
                                        <tr>
                                            <% if (data.blocks[index].fromAddress  != null) { %>
                                                <td><%= data.blocks[index].fromAddress.substring(0, 25)+"..." %></td>
                                            <% } else { %>
                                                <td><span style="width:100px;"><span class="badge-text badge-text-small success">Rewards</span></td>
                                            <% } %>
                                            <td><%= data.blocks[index].toAddress.substring(0, 25)+"..." %></td>
                                            <td><span style="width:100px;"><span class="badge-text badge-text-small info"><%= data.blocks[index].amount %></span></span></td>
                                        </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>                    
                </div>
                <% } else { %>
                    <div class="row flex-row">
                        <img style="margin:auto; width:30%" src="assets/img/animated/no-transactions.gif" />
                    </div>
                    <div class="row flex-row">
                        <p style="margin:auto">No transaction at now.</p>
                    </div>                      
                <% } %> 
            </div>
        </div>
    </div>
</div>